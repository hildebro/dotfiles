#!/bin/sh

[ "$(cat /sys/class/net/w*/operstate)" = 'down' ] && wifiicon="ğŸ“¡" ||
	wifiicon=$(grep "^\s*w" /proc/net/wireless | awk '{ print "ğŸ“¶", int($3 * 100 / 70) "%" }')

ethericon="ğŸŒ"
if [[ -z "$(rg 'up' /sys/class/net/e*/operstate)" ]]; then
	# if no ethernet interface is up, switch to DOWN icon
	ethericon="â"
fi

printf "%s %s\n" "$wifiicon" "$ethericon"
